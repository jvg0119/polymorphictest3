
<%= form_for @topic do |f| %>

  <div class="row">
    <div class="col-md-8">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>

    </div>
  </div>

<% end %>
